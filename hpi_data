-- Table for 1991

SELECT hpi_type, hpi_flavor, frequency, level, place_name, 
place_id, yr, period, index_nsa, index_sa
INTO nineteen_table
FROM hpitype
WHERE (place_id BETWEEN '1991' AND '1991');

SELECT * FROM nineteen_table;





